rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Users collection
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
      allow write: if request.auth != null && request.auth.uid == userId;
      // Only admins can update role field - this requires careful field-level security
      // allow update: if isAdmin() || (request.auth.uid == userId && !('role' in request.resource.data));
    }

    // Audit Logs - Strict admin access
    match /audit_logs/{logId} {
      allow read, write: if isAdmin();
    }
    
    // Appointments
    match /appointments/{aptId} {
      allow create: if request.auth != null;
      allow read, update: if request.auth != null && (resource.data.userId == request.auth.uid || isAdmin());
    }
    
    // Medications
    match /medications/{medId} {
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || isAdmin());
      allow write: if isAdmin();
    }
    
    // Resources & Referrals
    match /resources/{resId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /referrals/{refId} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
